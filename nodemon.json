{
    "watch": [
        "src/**/*",
        "*.json",
        "*.js"
    ],
    "ext": "ts,js,json",
    "ignore": [
        "node_modules/**/*",
        "dist/**/*",
        "tmp/**/*",
        "*.log"
    ],
    "exec": "node --loader ts-node/esm src/index.ts",
    "env": {
        "NODE_ENV": "development"
    },
    "delay": 1000,
    "verbose": true,
    "restartable": "rs",
    "colours": true
}
