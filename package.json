{
  "name": "html-parser-generator",
  "version": "1.0.0",
  "description": "A microservice for generating HTML parsers using OpenAI",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "start": "node dist/index.js",
    "dev": "tsup --watch & nodemon dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepare": "husky"
  },
  "keywords": [
    "html",
    "parser",
    "openai",
    "microservice"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "html-minifier-terser": "^7.2.0",
    "openai": "^4.20.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "tsup": "^8.5.0",
    "typescript": "^5.2.2"
  }
}
