{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": ["jest", "@types/jest", "node"]
    },
    "include": [
        "src/**/*",
        "src/**/*.test.ts",
        "src/**/*.spec.ts"
    ],
    "exclude": ["node_modules", "dist"]
}
