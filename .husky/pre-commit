#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run linting and formatting
echo "ğŸ” Running ESLint and Prettier..."

# Run ESLint with auto-fix
npm run lint:fix

# Run Prettier formatting
npm run format

# Check if there are any changes after linting and formatting
if ! git diff --quiet; then
    echo "ğŸ“ Code was automatically formatted. Adding changes to commit..."
    git add .
    echo "âœ… Formatted code has been added to the commit."
else
    echo "âœ… Code is already properly formatted."
fi
